# Local Development Environment (non-Docker)
# Copy this to .env for local development outside of Docker

DJANGO_ENV=dev

# Django Core Settings
DEBUG=true
TEMPLATE_DEBUG=true
SECRET_KEY=local-dev-secret-key-change-in-production

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (adjust for your local setup)
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=invasives
DB_USER=invasives
DB_PASSWORD=invasives
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@oregoninvasiveshotline.org
NOTIFICATIONS_FROM_EMAIL=no-reply@oregoninvasiveshotline.org
SERVER_EMAIL=do-not-reply@oregoninvasiveshotline.org

# Celery Configuration
CELERY_BROKER_URL=pyamqp://guest:guest@localhost//
CELERY_TASK_ALWAYS_EAGER=false

# Static and Media Files
STATIC_ROOT=
MEDIA_ROOT=

# Security Settings (relaxed for development)
CSRF_COOKIE_HTTPONLY=false
CSRF_COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# Google API
GOOGLE_API_KEY=

# Sentry (optional for dev)
SENTRY_DSN=
