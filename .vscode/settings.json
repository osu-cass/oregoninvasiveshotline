{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvironment": true,
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true
  },
  "files.watcherExclude": {
    "**/volumes/**": true,
    "**/media/**": true,
    "**/static/**": true,
    "**/.venv/**": true,
    "**/node_modules/**": true
  },
  // Note: This project uses pipenv. After running 'pipenv install --dev',
  // VS Code should auto-detect the virtual environment created by pipenv.
  // You may need to select the correct interpreter using the Command Palette
  // (Cmd/Ctrl+Shift+P > "Python: Select Interpreter")
}
