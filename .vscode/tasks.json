{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Docker: Start with Debugger",
			"type": "shell",
			"command": "docker compose up -d --wait",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"ENABLE_DEBUGGER": "true",
				},
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
			},
		},
		{
			"label": "Docker: Stop",
			"type": "shell",
			"command": "docker compose down",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
			},
		},
	],
}
