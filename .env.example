# Django Environment Configuration
# Copy this file to .env.docker, .env.test, or .env.production and customize

# Environment identifier (dev, docker, test, staging, prod)
DJANGO_ENV=docker

# Application Port (external port to bind to)
APP_PORT=8000

# Django Core Settings
DEBUG=true
TEMPLATE_DEBUG=true
SECRET_KEY=your-secret-key-here

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# Database Configuration
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=invasives
DB_USER=invasives
DB_PASSWORD=invasives
DB_HOST=postgres
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@oregoninvasiveshotline.org
NOTIFICATIONS_FROM_EMAIL=no-reply@oregoninvasiveshotline.org
SERVER_EMAIL=do-not-reply@oregoninvasiveshotline.org

# SMTP Settings (for production)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=pyamqp://guest:guest@rabbitmq//
CELERY_TASK_ALWAYS_EAGER=false

# Static and Media Files
STATIC_ROOT=/static
MEDIA_ROOT=/media
STATICFILES_STORAGE=django.contrib.staticfiles.storage.StaticFilesStorage

# Security Settings
CSRF_COOKIE_HTTPONLY=false
CSRF_COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# Google API
GOOGLE_API_KEY=

# Sentry Configuration (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics (optional)
GOOGLE_ANALYTICS_TRACKING_ID=
