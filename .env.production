# Production Environment
# NOTE: Sensitive values should be provided via Docker secrets
DJANGO_ENV=prod

# Docker Configuration
DOCKER_IMAGE=ghcr.io/osu-cass/oregoninvasiveshotline:latest
RABBITMQ_HOSTNAME=rabbitmq-production

# Application Port
APP_PORT=8002

# Django Core Settings
DEBUG=false
TEMPLATE_DEBUG=false

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=oregoninvasiveshotline.org,www.oregoninvasiveshotline.org

# Database Configuration
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=invasives
DB_USER=invasives
DB_HOST=postgresql
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@cass.oregonstate.edu
NOTIFICATIONS_FROM_EMAIL=no-reply@oregoninvasiveshotline.org

# SMTP Settings (configure as needed)
EMAIL_HOST=smtp.osuosl.org
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=pyamqp://guest:guest@rabbitmq//
CELERY_TASK_ALWAYS_EAGER=false

# Static and Media Files
STATIC_ROOT=/vol/www/oregoninvasiveshotline/static
MEDIA_ROOT=/vol/store/media
STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage

# Security Settings
CSRF_COOKIE_HTTPONLY=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=UA-57378202-5

# Sentry Configuration
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Secrets (loaded from Docker secrets)
# SECRET_KEY - loaded from /run/secrets/SECRET_KEY
# DB_PASSWORD - loaded from /run/secrets/DB_PASSWORD
# GOOGLE_API_KEY - loaded from /run/secrets/GOOGLE_API_KEY
# SENTRY_DSN - loaded from /run/secrets/SentryDSN (optional)
