# Staging Environment
# NOTE: Sensitive values should be provided via Docker secrets
DJANGO_ENV=staging

# Docker Configuration
DOCKER_IMAGE=ghcr.io/osu-cass/oregoninvasiveshotline:develop
RABBITMQ_HOSTNAME=rabbitmq-staging

# Application Port
APP_PORT=8001

# Django Core Settings
DEBUG=false
TEMPLATE_DEBUG=false

# Allowed Hosts (comma-separated) - update with your staging domain
ALLOWED_HOSTS=staging.oregoninvasiveshotline.org

# Database Configuration
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=invasives
DB_USER=invasives
DB_HOST=postgresql
DB_PORT=5432

# Email Configuration - configure for staging email testing
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@cass.oregonstate.edu
NOTIFICATIONS_FROM_EMAIL=no-reply@oregoninvasiveshotline.org

# SMTP Settings (configure as needed for staging)
EMAIL_HOST=smtp.osuosl.org
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=pyamqp://guest:guest@rabbitmq//
CELERY_TASK_ALWAYS_EAGER=false

# Static and Media Files
STATIC_ROOT=/static
MEDIA_ROOT=/media
STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage

# Security Settings
CSRF_COOKIE_HTTPONLY=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Google Analytics (use separate tracking ID for staging or leave empty)
GOOGLE_ANALYTICS_TRACKING_ID=

# Sentry Configuration
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5

# Secrets (loaded from Docker secrets)
# SECRET_KEY - loaded from /run/secrets/SECRET_KEY
# DB_PASSWORD - loaded from /run/secrets/DB_PASSWORD
# GOOGLE_API_KEY - loaded from /run/secrets/GOOGLE_API_KEY
# SENTRY_DSN - loaded from /run/secrets/SentryDSN (optional)
